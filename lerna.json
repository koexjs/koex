{
  "packages": [
    "packages/*"
  ],
  "version": "0.4.0",
  "command": {
    "publish": {
      "npmClient": "npm",
      "registry": "https://registry.npmjs.org/",
      "ignoreChanges": [
        "*.lock",
        "*.md",
        "examples/**"
      ],
      "allowBranch": [
        "master"
      ],
      "commitHooks": false,
      "message": "chore(release): publish",
      "conventionalCommits": true
    },
    "bootstrap": {
      "npmClient": "npm",
      "hoist": true
    },
    "version": {
      "conventionalCommits": true
    }
  },
  "ignoreChanges": [
    "**/*.md"
  ],
  "changelog": {
    "repo": "zcorky/fastapi",
    "labels": {
      "enchancement": ":rocket:(Enhancement)",
      "bug": ":bug:(Bug Fix)",
      "doc": ":doc:(Refine Doc)",
      "feat": ":sparkles:(Feature)"
    },
    "cacheDir": ".changelog"
  }
}
