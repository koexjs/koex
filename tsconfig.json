{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    // "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "sourceMap": false,
    "lib": [
      "es2018"
    ],
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@koex/*": ["packages/*"]
    },
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "lib",
    // "__tests__",
    // "**/*.spec.ts",
    // "**/*.test.ts"
  ]
 }